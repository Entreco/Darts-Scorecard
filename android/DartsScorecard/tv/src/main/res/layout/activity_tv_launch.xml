<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="animator"
            type="nl.entreco.dartsscorecard.tv.launch.LaunchTvAnimator" />

        <variable
            name="viewModel"
            type="nl.entreco.dartsscorecard.tv.launch.LaunchTvViewModel" />
    </data>

    <android.support.v7.widget.FitWindowsFrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/splash">

        <!-- Nested RelativeLayout with overscan-safe margin -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="27dp"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="48dp"
            android:layout_marginTop="27dp"
            android:gravity="center_horizontal"
            android:paddingTop="@dimen/xlarge">

            <include
                android:id="@+id/include_launch_header"
                layout="@layout/include_launch_header" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:src="@drawable/ic_entreco_black_bg" />

        </RelativeLayout>

    </android.support.v7.widget.FitWindowsFrameLayout>
</layout>