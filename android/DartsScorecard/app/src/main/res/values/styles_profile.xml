<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ProfileName">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="ProfileTagline" parent="ProfileName">
        <item name="android:textSize">18sp</item>
        <item name="android:padding">@dimen/def</item>
        <item name="android:maxLines">5</item>
        <item name="android:singleLine">false</item>
    </style>

    <style name="SelectProfileName" parent="ProfileName">
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="SelectProfileTagline" parent="ProfileTagline">
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">start</item>
        <item name="android:padding">@dimen/xsmall</item>
    </style>
</resources>
