<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Score">
        <item name="android:maxLines">1</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?attr/scoreText</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Score.Hdr">
        <item name="android:padding">@dimen/xsmall</item>
        <item name="android:textColor">?attr/header_text_color</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Score.Name">
        <item name="android:ellipsize">marquee</item>
        <item name="android:padding">@dimen/xsmall</item>
        <item name="android:gravity">start</item>
        <item name="android:background">@drawable/score_name</item>
        <item name="android:textColor">?attr/nameText</item>
    </style>

    <style name="Score.Leg">
        <item name="android:padding">@dimen/xsmall</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/score</item>
        <item name="android:textColor">?attr/scoreText</item>
    </style>

    <style name="Score.Set">
        <item name="android:padding">@dimen/xsmall</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/score</item>
        <item name="android:textColor">?attr/scoreText</item>
    </style>

    <style name="Score.Pts">
        <item name="android:padding">@dimen/xsmall</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/score_pts</item>
        <item name="android:textColor">?attr/ptsText</item>
    </style>

    <style name="Score.Hint">
        <item name="android:padding">@dimen/xsmall</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/score_hint</item>
        <item name="android:textColor">?attr/scoreText</item>
    </style>

    <style name="Score.Finish">
        <item name="android:padding">@dimen/xsmall</item>
        <item name="android:paddingStart">@dimen/def</item>
        <item name="android:paddingEnd">@dimen/def</item>
        <item name="android:gravity">end</item>
        <item name="android:background">@drawable/score_hint</item>
        <item name="android:textColor">?attr/scoreText</item>
    </style>

    <style name="Score.Nine">
        <item name="android:padding">@dimen/xsmall</item>
        <item name="android:paddingStart">@dimen/def</item>
        <item name="android:paddingEnd">@dimen/def</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/score_nine</item>
        <item name="android:textColor">?attr/colorNineDart</item>
    </style>

    <style name="Score.CurrentTeam">
        <item name="android:layout_gravity">end|center_vertical</item>
        <item name="android:src">@drawable/ic_current_team</item>
    </style>
</resources>