<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Main Start -->
    <style name="Main">
        <item name="android:padding">@dimen/xsmall</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">20sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">?attr/scoreText</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Main.Title">
        <item name="android:layout_marginEnd">@dimen/large</item>
        <item name="android:layout_marginStart">@dimen/large</item>
        <item name="android:background">@drawable/stats_header</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="Main.Score">
        <item name="android:padding">@dimen/xsmall</item>
        <item name="android:background">@drawable/score_hint</item>
        <item name="android:paddingEnd">@dimen/def</item>
        <item name="android:paddingStart">@dimen/def</item>
        <item name="android:textColor">?attr/scoreText</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Main.Player">
        <item name="android:background">@drawable/spinner_player</item>
        <item name="android:padding">@dimen/xsmall</item>
        <item name="android:paddingStart">@dimen/def</item>
        <item name="android:paddingEnd">@dimen/def</item>
        <item name="android:textColor">?attr/nameText</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Main.Value">
        <item name="android:background">@drawable/stat_player</item>
        <item name="android:padding">@dimen/xsmall</item>
        <item name="android:textColor">?attr/nameText</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Main.Stat">
        <item name="android:background">@drawable/score_pts</item>
        <item name="android:padding">@dimen/xsmall</item>
        <item name="android:textColor">?attr/ptsText</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>