<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Input">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">20sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">?attr/scoreText</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="Input.Back" parent="@android:style/Widget.Material.Light.Button.Borderless">
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:src">@drawable/ic_escape</item>
    </style>

    <style name="Input.Mini">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">?attr/scoreText</item>
        <item name="android:padding">@dimen/def</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Input.Next">
        <item name="android:textColor">?attr/ptsText</item>
        <item name="android:gravity">start</item>
        <item name="android:paddingStart">@dimen/large</item>
        <item name="android:paddingEnd">@dimen/large</item>
    </style>

    <style name="Input.Sub">
        <item name="android:textColor">?attr/ptsText</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">start|bottom</item>
        <item name="android:paddingStart">@dimen/large</item>
        <item name="android:paddingEnd">@dimen/large</item>
    </style>

    <style name="InputNumber" parent="@android:style/Widget.Material.Light.Button.Borderless">
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">20dp</item>
        <item name="android:background">@drawable/input_number</item>
    </style>

    <style name="InputNumberBtn">
        <item name="android:textColor">?attr/nameText</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">30sp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/xsmall</item>
        <item name="android:minWidth">0dip</item>
        <item name="android:minHeight">0dip</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="InputNumberHint">
        <item name="android:alpha">.5</item>
        <item name="android:textColor">?attr/nameText</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">8sp</item>
        <item name="android:gravity">center</item>
        <item name="android:minWidth">0dip</item>
        <item name="android:minHeight">0dip</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Input.Number" parent="@android:style/Widget.Material.Light.Button.Borderless">
        <item name="android:layout_columnWeight">1</item>
        <item name="android:textColor">?attr/nameText</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/input_number</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">30sp</item>
        <item name="android:gravity">center</item>
        <item name="android:minWidth">0dip</item>
        <item name="android:padding">@dimen/def</item>
        <item name="android:minHeight">0dip</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Input.Number.Accent">
        <item name="android:textColor">?attr/grad_score_pts_start</item>
        <item name="android:gravity">center|bottom</item>
    </style>

    <style name="Input.Score">
        <item name="fontFamily">sans-serif-condensed</item>
        <item name="android:paddingTop">@dimen/xsmall</item>
        <item name="android:paddingBottom">@dimen/xsmall</item>
        <item name="android:paddingStart">@dimen/def</item>
        <item name="android:paddingEnd">@dimen/def</item>
        <item name="android:textSize">28sp</item>
        <item name="android:gravity">end</item>
        <item name="android:textColor">?attr/ptsText</item>
    </style>

    <style name="Input.Score.No">
        <item name="android:translationX">-2000dp</item>
        <item name="android:background">@drawable/score_hint</item>
        <item name="android:textColor">?attr/scoreText</item>
        <item name="android:gravity">end|center</item>
    </style>

</resources>