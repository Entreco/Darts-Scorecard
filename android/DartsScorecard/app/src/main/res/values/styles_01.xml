<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Score">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?attr/scoreText</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Score.Hdr">
        <item name="android:padding">@dimen/xsmall</item>
        <item name="android:textColor">?attr/header_text_color</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Score.Name">
        <item name="android:padding">@dimen/xsmall</item>
        <item name="android:gravity">start</item>
        <item name="android:background">@drawable/score_name</item>
        <item name="android:textColor">?attr/nameText</item>
    </style>

    <style name="Score.Leg">
        <item name="android:padding">@dimen/xsmall</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/score</item>
        <item name="android:textColor">?attr/scoreText</item>
    </style>

    <style name="Score.Set">
        <item name="android:padding">@dimen/xsmall</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/score</item>
        <item name="android:textColor">?attr/scoreText</item>
    </style>

    <style name="Score.Pts">
        <item name="android:padding">@dimen/xsmall</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/score_pts</item>
        <item name="android:textColor">?attr/ptsText</item>
    </style>

    <style name="Score.Hint">
        <item name="android:padding">@dimen/xsmall</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/score_hint</item>
        <item name="android:textColor">?attr/scoreText</item>
    </style>


    <style name="Input">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?attr/scoreText</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="Input.Mini">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">?attr/nameText</item>
        <item name="android:padding">@dimen/def</item>
    </style>

    <style name="Input.Next">
        <item name="android:textColor">?attr/ptsText</item>
    </style>

    <style name="Input.Sub">
        <item name="android:textColor">?attr/ptsText</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Input.Number" parent="@android:style/Widget.Material.Light.Button.Borderless">
        <item name="android:layout_columnWeight">1</item>
        <item name="android:textColor">?attr/nameText</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/input_number</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">30sp</item>
        <item name="android:gravity">center</item>
        <item name="android:minWidth">0dip</item>
        <item name="android:padding">@dimen/def</item>
        <item name="android:minHeight">0dip</item>
        <item name="android:textAllCaps">false</item>
        <!--<item name="android:textColor">@color/pad_button_text_color</item>-->
    </style>

    <style name="Input.Number.Accent">
        <item name="android:textColor">?attr/grad_score_pts_start</item>
        <item name="android:gravity">center|bottom</item>
    </style>

    <style name="Input.Score">
        <item name="fontFamily">sans-serif-condensed</item>
        <item name="android:paddingTop">@dimen/xsmall</item>
        <item name="android:paddingBottom">@dimen/xsmall</item>
        <item name="android:paddingStart">@dimen/def</item>
        <item name="android:paddingEnd">@dimen/def</item>
        <item name="android:textSize">28sp</item>
        <item name="android:maxLength">3</item>
        <item name="android:textColor">?attr/ptsText</item>
    </style>

    <!-- Main Start -->
    <style name="Main">
        <item name="android:padding">@dimen/xsmall</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?attr/scoreText</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Main.Score">
        <item name="android:padding">@dimen/xsmall</item>
        <item name="android:background">@drawable/score_header</item>
        <item name="android:paddingEnd">@dimen/def</item>
        <item name="android:paddingStart">@dimen/def</item>
        <item name="android:textColor">?attr/ptsText</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Main.Player">
        <item name="android:background">@drawable/score_name</item>
        <item name="android:padding">@dimen/xsmall</item>
        <item name="android:paddingStart">@dimen/def</item>
        <item name="android:paddingEnd">@dimen/def</item>
        <item name="android:textColor">?attr/nameText</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Main.Value">
        <item name="android:background">@drawable/score_name</item>
        <item name="android:padding">@dimen/xsmall</item>
        <item name="android:textColor">?attr/nameText</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Main.Stat">
        <item name="android:background">@drawable/score_pts</item>
        <item name="android:padding">@dimen/xsmall</item>
        <item name="android:textColor">?attr/ptsText</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>