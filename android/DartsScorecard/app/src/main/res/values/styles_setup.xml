<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Setup">
        <item name="android:maxLines">1</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?attr/scoreText</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Setup.Progress" parent="@style/Widget.AppCompat.SeekBar.Discrete">
        <item name="android:layout_gravity">center</item>
        <item name="tickMark">@null</item>
    </style>

    <style name="Setup.Hdr">
        <item name="android:padding">@dimen/xsmall</item>
        <item name="android:paddingStart">@dimen/def</item>
        <item name="android:textColor">?attr/header_text_color</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Setup.Hdr.End">
        <item name="android:gravity">center</item>
    </style>

    <style name="Setup.Ftr" parent="Setup.Hdr">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/large</item>
        <item name="android:layout_marginBottom">@dimen/large</item>
        <item name="android:background">@drawable/score_footer</item>
        <item name="android:padding">@dimen/xsmall</item>
    </style>

    <style name="Setup.Ad">
        <item name="android:background">@drawable/score_name</item>
    </style>

    <style name="Setup.Entry">
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">start</item>
        <item name="android:background">@drawable/score_name</item>
        <item name="android:textColor">?attr/nameText</item>
    </style>

    <style name="Setup.Entry.Value">
        <item name="android:background">@drawable/score_pts</item>
        <item name="android:textColor">?attr/header_text_color</item>
        <item name="android:padding">@dimen/def</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Setup.Entry.Spinner">
        <item name="android:background">@drawable/score_spinner</item>
        <item name="android:textColor">?attr/header_text_color</item>
        <item name="android:padding">@dimen/def</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Setup.Spinner" parent="@style/Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:background">@drawable/score_pts</item>
        <item name="android:textColor">?attr/scoreText</item>
        <item name="android:alpha">0</item>
        <item name="android:padding">@dimen/def</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Setup.Entry.Txt">
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/def</item>
        <item name="android:paddingBottom">@dimen/def</item>
        <item name="android:paddingStart">@dimen/large</item>
        <item name="android:paddingEnd">@dimen/large</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">?attr/nameText</item>
    </style>

    <style name="Setup.Auto">
        <item name="android:padding">@dimen/def</item>
        <item name="android:background">@drawable/score_name</item>
        <item name="android:textColor">?attr/nameText</item>
    </style>

    <style name="Setup.Btn" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/score_hint</item>
        <item name="android:textColor">?attr/scoreText</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:padding">@dimen/def</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingEnd">@dimen/xlarge</item>
        <item name="android:paddingStart">@dimen/xlarge</item>
    </style>
</resources>