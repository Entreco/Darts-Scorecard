<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Setup">
        <item name="android:maxLines">1</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?attr/scoreText</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Setup.Progress" parent="Widget.AppCompat.SeekBar.Discrete">
        <item name="android:layout_gravity">center</item>
        <item name="tickMark">@drawable/tick</item>
    </style>
    <style name="Setup.Hdr">
        <item name="android:padding">@dimen/xsmall</item>
        <item name="android:textColor">?attr/header_text_color</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="Setup.Ftr" parent="Setup.Hdr">
        <item name="android:layout_marginBottom">@dimen/xlarge</item>
    </style>
    <style name="Setup.Entry">
        <item name="android:ellipsize">marquee</item>
        <item name="android:padding">@dimen/xsmall</item>
        <item name="android:gravity">start</item>
        <item name="android:background">@drawable/score_name</item>
        <item name="android:textColor">?attr/nameText</item>
    </style>
    <style name="Setup.Entry.Txt">
        <item name="android:ellipsize">marquee</item>
        <item name="android:padding">@dimen/small</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/score_name</item>
        <item name="android:textColor">?attr/nameText</item>
    </style>
    <style name="Setup.Btn" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@drawable/launch_btn</item>
        <item name="android:textColor">?attr/launchText</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:padding">@dimen/def</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:drawableTint">?attr/launchText</item>
        <item name="android:paddingEnd">@dimen/xlarge</item>
        <item name="android:paddingStart">@dimen/xlarge</item>
    </style>
</resources>