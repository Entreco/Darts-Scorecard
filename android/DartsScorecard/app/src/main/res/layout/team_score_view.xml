<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="team"
            type="nl.entreco.domain.play.model.players.Team" />

        <variable
            name="score"
            type="nl.entreco.domain.play.model.Score" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:showIn="@layout/play_01_score">

        <TextView
            style="@style/Score.Name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="300"
            android:drawableEnd="@drawable/starter"
            android:text="@{team.toString()}" />

        <nl.entreco.dartsscorecard.CounterTextView
            style="@style/Score.Leg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="42"
            app:score="@{score.leg}" />

        <nl.entreco.dartsscorecard.CounterTextView
            style="@style/Score.Set"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="42"
            app:score="@{score.set}" />

        <nl.entreco.dartsscorecard.CounterTextView
            style="@style/Score.Pts"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            app:score="@{score.score}" />
    </LinearLayout>
</layout>