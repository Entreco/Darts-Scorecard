<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="nl.entreco.dartsscorecard.play.input.InputViewModel" />

        <variable
            name="listener"
            type="nl.entreco.dartsscorecard.play.input.InputListener" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Top Bar -->
        <RelativeLayout
            android:id="@+id/topbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/score_header"
            android:padding="@dimen/def">

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/input_toggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/input_label"
                android:layout_gravity="center"
                android:checked="@={viewModel.toggle}" />

            <TextView
                android:id="@+id/input_label"
                style="@style/Input.Mini"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@id/input_toggle"
                android:layout_alignStart="@id/input_toggle"
                android:gravity="center"
                android:text="@{viewModel.toggle ? @string/single_mode : @string/all_mode}" />

            <ImageButton
                android:id="@+id/input_escape"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/input_toggle"
                android:layout_alignParentEnd="true"
                android:background="@null"
                android:onClick="@{() -> viewModel.back()}"
                android:src="@drawable/ic_escape" />

            <TextView
                android:id="@+id/input_score"
                style="@style/Input.Score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/input_toggle"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@id/input_escape"
                android:gravity="center"
                android:text="@{viewModel.scoredTxt}" />

            <TextView
                android:id="@+id/input_next"
                style="@style/Input.Next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/input_label"
                android:layout_toStartOf="@id/input_score"
                android:gravity="start"
                android:paddingStart="12dp"
                android:text="@{viewModel.current.name}"
                tools:text="boeffie" />

            <TextView
                android:id="@+id/input_sub"
                style="@style/Input.Sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/input_toggle"
                android:layout_below="@id/input_next"
                android:layout_toEndOf="@id/input_label"
                android:layout_toStartOf="@id/input_score"
                android:gravity="start|bottom"
                android:paddingStart="12dp"
                android:text="@string/next"
                tools:text="boeffie" />

        </RelativeLayout>

        <GridLayout
            app:layout_constraintTop_toBottomOf="@id/topbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#131313"
            android:columnCount="4"
            android:rowCount="4">

            <Button
                style="@style/Input.Number"
                android:onClick="@{() -> viewModel.entered(1)}"
                android:text="1" />

            <Button
                style="@style/Input.Number"
                android:onClick="@{() -> viewModel.entered(2)}"
                android:text="2" />

            <Button
                style="@style/Input.Number"
                android:onClick="@{() -> viewModel.entered(3)}"
                android:text="3" />

            <TextView
                android:layout_width="@dimen/input_side_bar"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="some" />

            <Button
                style="@style/Input.Number"
                android:onClick="@{() -> viewModel.entered(4)}"
                android:text="4" />

            <Button
                style="@style/Input.Number"
                android:onClick="@{() -> viewModel.entered(5)}"
                android:text="5" />

            <Button
                style="@style/Input.Number"
                android:onClick="@{() -> viewModel.entered(6)}"
                android:text="6" />

            <TextView
                android:layout_width="@dimen/input_side_bar"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="some" />

            <Button
                style="@style/Input.Number"
                android:onClick="@{() -> viewModel.entered(7)}"
                android:text="7" />

            <Button
                style="@style/Input.Number"
                android:onClick="@{() -> viewModel.entered(8)}"
                android:text="8" />

            <Button
                style="@style/Input.Number"
                android:onClick="@{() -> viewModel.entered(9)}"
                android:text="9" />

            <TextView
                android:layout_width="@dimen/input_side_bar"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="some" />

            <Button
                style="@style/Input.Number.Accent"
                android:text="_" />

            <Button
                style="@style/Input.Number"
                android:onClick="@{() -> viewModel.entered(0)}"
                android:text="0" />

            <Button
                style="@style/Input.Number.Accent"
                android:text="*" />

            <TextView
                android:layout_width="@dimen/input_side_bar"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="some" />
        </GridLayout>

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="16dp"
            android:onClick="@{() -> viewModel.submitRandom(listener)}"
            android:src="@drawable/ic_dart"
            fab:fabSize="normal"
            fab:layout_constraintBottom_toBottomOf="parent"
            fab:layout_constraintEnd_toEndOf="parent" />

    </android.support.constraint.ConstraintLayout>
</layout>