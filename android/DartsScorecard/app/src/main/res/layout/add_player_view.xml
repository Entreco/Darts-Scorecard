<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:showIn="@layout/activity_setup_01">

    <data>

        <variable
            name="clicker"
            type="nl.entreco.dartsscorecard.setup.players.AddPlayerClicker" />
    </data>

    <RelativeLayout
        style="@style/Setup.Entry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/Setup.Auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/teamIndex"
            android:gravity="start"
            android:onClick="@{() -> clicker.onAddPlayer()}"
            android:text="@string/add_player" />

    </RelativeLayout>

</layout>