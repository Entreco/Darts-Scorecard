<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:showIn="@layout/activity_setup_01">

    <data>

        <variable
            name="viewModel"
            type="nl.entreco.dartsscorecard.setup.players.PlayersViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/score_header"
            android:orientation="horizontal">

            <TextView
                style="@style/Setup.Hdr"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="@dimen/xsmall"
                android:text="@string/select_players" />

            <TextView
                style="@style/Setup.Hdr.End"
                android:layout_width="@dimen/setup_width"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/xsmall"
                android:text="@string/team" />
        </LinearLayout>

        <!-- Players -->
        <RelativeLayout
            style="@style/Setup.Entry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/Setup.Auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@id/teamIndex"
                android:gravity="start"
                android:text="@string/add_player" />

            <TextView
                android:id="@+id/teamIndex"
                style="@style/Setup.Entry.Value"
                android:layout_width="@dimen/setup_width"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="1" />

            <android.support.v7.widget.AppCompatSpinner
                style="@style/Setup.Entry.Spinner"
                android:layout_width="@dimen/setup_width"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:alpha="0" />
        </RelativeLayout>

        <!-- Footer -->
        <TextView style="@style/Setup.Ftr" />
    </LinearLayout>
</layout>