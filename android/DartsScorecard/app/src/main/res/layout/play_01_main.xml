<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="nl.entreco.dartsscorecard.play.stats.MatchStatViewModel" />
    </data>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <RelativeLayout
            android:id="@+id/mainSheet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0"
            android:background="@drawable/stats_bg"
            tools:alpha="1">

            <TextView
                android:id="@+id/title"
                style="@style/Main.Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/match_stats" />

            <!-- Players -->
            <LinearLayout
                android:id="@+id/players"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:orientation="horizontal"
                android:paddingTop="20dp">

                <ImageView
                    android:id="@+id/player1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_player1" />

                <ImageView
                    android:id="@+id/player2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_player2" />
            </LinearLayout>

            <!-- Results -->
            <LinearLayout
                android:id="@+id/results"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/players"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/name1"
                    style="@style/Main.Player"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center|end"
                    android:text="@{viewModel.teamStats[0].name}" />

                <TextView
                    android:id="@+id/score"
                    style="@style/Main.Score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/vs"
                    tools:text="VS"/>

                <TextView
                    android:id="@+id/name2"
                    style="@style/Main.Player"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center|start"
                    android:text="@{viewModel.teamStats[1].name}" />
            </LinearLayout>

            <!-- Stats -->
            <LinearLayout
                android:id="@+id/stat7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/stat6"
                android:orientation="horizontal">

                <TextView
                    style="@style/Main.Value"
                    android:layout_width="68dp"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.teamStats[0].breaks.toString()}" />

                <TextView
                    style="@style/Main.Stat"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/live_breaks_made" />

                <TextView
                    style="@style/Main.Value"
                    android:layout_width="68dp"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.teamStats[1].breaks.toString()}" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/stat6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/stat5"
                android:orientation="horizontal">

                <TextView
                    style="@style/Main.Value"
                    android:layout_width="68dp"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.teamStats[0].co.toString()}"  />

                <TextView
                    style="@style/Main.Stat"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/live_double_success" />

                <TextView
                    style="@style/Main.Value"
                    android:layout_width="68dp"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.teamStats[1].co.toString()}"  />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/stat5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/stat4"
                android:orientation="horizontal">

                <TextView
                    style="@style/Main.Value"
                    android:layout_width="68dp"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.teamStats[0].hCo.toString()}" />

                <TextView
                    style="@style/Main.Stat"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/live_highest_out" />

                <TextView
                    style="@style/Main.Value"
                    android:layout_width="68dp"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.teamStats[1].hCo.toString()}" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/stat4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/stat3"
                android:orientation="horizontal">

                <TextView
                    style="@style/Main.Value"
                    android:layout_width="68dp"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.teamStats[0].n180.toString()}" />

                <TextView
                    style="@style/Main.Stat"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/live_180s"
                    android:textAllCaps="false" />

                <TextView
                    style="@style/Main.Value"
                    android:layout_width="68dp"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.teamStats[1].n180.toString()}" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/stat3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/stat2"
                android:orientation="horizontal">

                <TextView
                    style="@style/Main.Value"
                    android:layout_width="68dp"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.teamStats[0].n140.toString()}" />

                <TextView
                    style="@style/Main.Stat"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/live_140s" />

                <TextView
                    style="@style/Main.Value"
                    android:layout_width="68dp"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.teamStats[1].n140.toString()}" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/stat2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/stat1"
                android:orientation="horizontal">

                <TextView
                    style="@style/Main.Value"
                    android:layout_width="68dp"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.teamStats[0].n100.toString()}" />

                <TextView
                    style="@style/Main.Stat"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/live_100s" />

                <TextView
                    style="@style/Main.Value"
                    android:layout_width="68dp"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.teamStats[1].n100.toString()}" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/stat1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/results"
                android:orientation="horizontal">

                <TextView
                    style="@style/Main.Value"
                    android:layout_width="68dp"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.teamStats[0].avg.toString()}" />

                <TextView
                    style="@style/Main.Stat"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/live_average" />

                <TextView
                    style="@style/Main.Value"
                    android:layout_width="68dp"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.teamStats[1].avg.toString()}" />
            </LinearLayout>

            <TextView
                android:id="@+id/version"
                style="@style/Input.Mini"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/stat7"
                android:gravity="center"
                android:padding="@dimen/def"
                android:shadowColor="#ffffff"
                android:shadowDx="1.0"
                android:shadowDy="1.0"
                android:text="@string/version"
                android:textColor="#aaffffff" />

        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>
</layout>