<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <gradient
                android:angle="-90"
                android:endColor="?attr/grad_score_pts_stop"
                android:startColor="?attr/grad_score_pts_start" />
        </shape>
    </item>
    <item>
        <nine-patch
            android:alpha="?attr/scoreBorderAlpha"
            android:src="@drawable/highlight" />
    </item>
    <item>
        <shape>
            <stroke
                android:width="1px"
                android:color="?attr/scoreBorderColor" />
        </shape>
    </item>

</layer-list>